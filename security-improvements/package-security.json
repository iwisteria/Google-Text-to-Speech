{
  "name": "secure-substack-tts-tool",
  "version": "1.0.0",
  "description": "セキュア版 Substack記事音声生成ツール",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "security-audit": "npm audit --audit-level moderate",
    "security-fix": "npm audit fix",
    "test": "jest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "@google-cloud/text-to-speech": "^5.4.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "validator": "^13.11.0",
    "isomorphic-dompurify": "^2.4.0",
    "cookie-parser": "^1.4.6",
    "express-session": "^1.17.3",
    "connect-redis": "^7.1.0",
    "redis": "^4.6.10",
    "dotenv": "^16.3.1",
    "compression": "^1.7.4",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-security": "^1.7.1",
    "supertest": "^6.3.3",
    "@types/node": "^20.10.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "semver": "^7.5.4",
    "word-wrap": "^1.2.5"
  },
  "security": {
    "advisoryCheck": true,
    "auditLevel": "moderate",
    "allowedLicenses": [
      "MIT",
      "Apache-2.0",
      "BSD-2-Clause",
      "BSD-3-Clause",
      "ISC"
    ]
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "plugin:security/recommended"
    ],
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "rules": {
      "security/detect-object-injection": "warn",
      "security/detect-non-literal-fs-filename": "warn",
      "security/detect-unsafe-regex": "error",
      "security/detect-eval-with-expression": "error",
      "no-eval": "error",
      "no-implied-eval": "error",
      "no-new-func": "error"
    }
  }
}